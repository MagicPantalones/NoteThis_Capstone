<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/secondaryDarkColor</item>

    </style>

    <style name="FragmentDarkBackground">
        <item name="android:background">@color/primaryColor</item>
    </style>

    <style name="logoText">
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:text">@string/app_name</item>
        <item name="android:letterSpacing">0.2</item>
        <item name="android:textColor">@color/secondaryColor</item>
        <item name="android:textSize">@dimen/text_size_logo</item>
    </style>

    <style name="toolbarText" parent="Base.TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:text">@string/app_name</item>
        <item name="android:textColor">@color/secondaryColor</item>
        <item name="android:textSize">@dimen/text_size_logo_toolbar</item>
    </style>

    <style name="text">
        <item name="android:fontFamily">sans-serif</item>
    </style>
    
    <style name="text.deleteText">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textSize">@dimen/text_size_body_large</item>
    </style>

    <style name="text.lightTextNormal">
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textSize">@dimen/text_size_body</item>
    </style>

    <style name="text.darkTextNormal">
        <item name="android:textColor">@color/secondaryTextColor</item>
        <item name="android:textSize">@dimen/text_size_body</item>
    </style>

    <style name="text.sheetListText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#de000000</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/list_text_area_size</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    
    <style name="dialogButton" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/secondaryColor</item>
    </style>
    <style name="dialogButton.cancel">
        <item name="android:text">@string/cancel</item>
    </style>
    <style name="dialogButton.ok">
        <item name="android:text">@string/confirm</item>
    </style>
    
    <style name="headerSheetStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/list_text_area_size</item>
        <item name="android:layout_marginStart">@dimen/margin_8dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:lines">1</item>
    </style>

    <style name="headerOutlineStyle">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginEnd">@dimen/margin_4dp</item>
        <item name="android:background">@color/secondaryColor</item>
        <item name="android:layout_marginTop">@dimen/margin_4dp</item>
        <item name="android:layout_marginBottom">@dimen/margin_4dp</item>
    </style>

</resources>
