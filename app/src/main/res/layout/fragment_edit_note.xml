<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true"
    android:paddingTop="?attr/actionBarSize"
    tools:context=".ui.fragments.EditNoteFragment"
    android:orientation="vertical"
    android:background="@color/backgroundColorMain">

        <EditText
            android:id="@+id/edit_note_view"
            android:hint="@string/new_note_btn"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:inputType="textMultiLine|textAutoComplete|textAutoCorrect"
            android:typeface="sans"
            android:gravity="start"
            android:layout_marginTop="@dimen/margin_16dp"
            android:layout_marginStart="@dimen/margin_16dp"
            android:layout_marginEnd="@dimen/margin_16dp"
            android:layout_marginBottom="@dimen/margin_16dp"
            android:background="@android:color/transparent"
            style="@style/text.darkTextNormal"
            />

        <!-- TODO Implement Markdown template toolbar -->


</LinearLayout>