<?xml version="1.0" encoding="utf-8"?>

<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:behavior_hideable="false"
    app:behavior_peekHeight="64dp"
    app:layout_behavior="@string/bottom_sheet_behavior">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/backgroundColorMain"
        app:cardCornerRadius="0dp"
        app:cardElevation="@dimen/cardview_default_elevation">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.constraint.ConstraintLayout
                android:id="@+id/peek_row"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/primaryDarkColor"
                tools:visibility="visible">

                <ImageView
                    android:id="@+id/peek_lists"
                    android:layout_width="@dimen/button_area_size"
                    android:layout_height="@dimen/button_area_size"
                    android:layout_marginStart="@dimen/margin_16dp"
                    android:contentDescription="@string/sheet_list_a11y"
                    android:padding="@dimen/button_icon_padding"
                    android:src="@drawable/outline_format_list_numbered_24px"
                    android:tint="@color/secondaryColor"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/peek_headers"
                    app:layout_constraintHorizontal_chainStyle="spread_inside"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/peek_headers"
                    android:layout_width="@dimen/button_area_size"
                    android:layout_height="@dimen/button_area_size"
                    android:contentDescription="@string/sheet_headers_a11y"
                    android:padding="@dimen/button_icon_padding"
                    android:src="@drawable/outline_format_size_24px"
                    android:tint="@color/secondaryColor"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/peek_links"
                    app:layout_constraintStart_toEndOf="@+id/peek_lists"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/peek_links"
                    android:layout_width="@dimen/button_area_size"
                    android:layout_height="@dimen/button_area_size"
                    android:contentDescription="@string/sheet_link_a11y"
                    android:padding="@dimen/button_icon_padding"
                    android:src="@drawable/outline_link_24px"
                    android:tint="@color/secondaryColor"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/peek_image"
                    app:layout_constraintStart_toEndOf="@+id/peek_headers"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/peek_image"
                    android:layout_width="@dimen/button_area_size"
                    android:layout_height="@dimen/button_area_size"
                    android:layout_marginEnd="@dimen/margin_16dp"
                    android:contentDescription="@string/sheet_image_a11y"
                    android:padding="@dimen/button_icon_padding"
                    android:src="@drawable/outline_image_24"
                    android:tint="@color/secondaryColor"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/peek_links"
                    app:layout_constraintTop_toTopOf="parent" />

            </android.support.constraint.ConstraintLayout>

            <android.support.constraint.ConstraintLayout
                android:id="@+id/button_row"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@color/primaryDarkColor"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@+id/peek_row"
                app:layout_constraintTop_toTopOf="parent">

                <Button
                    android:id="@+id/peek_negative_button"
                    style="@style/Base.Widget.AppCompat.Button.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/margin_16dp"
                    android:textColor="@color/secondaryColor"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/peek_positive_button"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="Cancel" />

                <Button
                    android:id="@+id/peek_positive_button"
                    style="@style/Base.Widget.AppCompat.Button.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@color/secondaryColor"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="OK" />
            </android.support.constraint.ConstraintLayout>

            <LinearLayout
                android:id="@+id/lists_sheet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/margin_24dp"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/peek_row">

                <TextView
                    android:id="@+id/ordered_list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12dp"
                    android:text="@string/sheet_preview_ordered_list" />

                <TextView
                    android:id="@+id/unordered_list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="@string/sheet_preview_unordered_list" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/headers_sheet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/margin_16dp"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/peek_row">

                <TextView
                    android:id="@+id/h1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:text="@string/sheet_preview_h1" />

                <TextView
                    android:id="@+id/h2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_16dp"
                    android:lines="1"
                    android:text="@string/sheet_preview_h2" />

                <TextView
                    android:id="@+id/h3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_16dp"
                    android:lines="1"
                    android:text="@string/sheet_preview_h3" />

                <TextView
                    android:id="@+id/h4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_16dp"
                    android:lines="1"
                    android:text="@string/sheet_preview_h4" />

                <TextView
                    android:id="@+id/h5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_16dp"
                    android:lines="1"
                    android:text="@string/sheet_preview_h5" />

                <TextView
                    android:id="@+id/h6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_16dp"
                    android:lines="1"
                    android:text="@string/sheet_preview_h6" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/link_sheet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/margin_24dp"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@+id/peek_row">

                <EditText
                    android:id="@+id/sheet_url_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/sheet_preview_url_title_hint"
                    android:inputType="text|textCapSentences|textUri" />

                <EditText
                    android:id="@+id/sheet_url"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_16dp"
                    android:hint="@string/sheet_preview_url_hint"
                    android:inputType="textUri" />
            </LinearLayout>

            <android.support.constraint.ConstraintLayout
                android:id="@+id/images_sheet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin_16dp"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@+id/peek_row"
                tools:visibility="visible">


                <TextView
                    android:id="@+id/pick_uploaded_image"
                    style="@style/text.sheetListText"
                    android:text="@string/sheet_pick_image"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <TextView
                    android:id="@+id/upload_image"
                    style="@style/text.sheetListText"
                    android:text="@string/sheet_upload_image"
                    app:layout_constraintTop_toBottomOf="@+id/pick_uploaded_image"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <TextView
                    android:id="@+id/template_image"
                    style="@style/text.sheetListText"
                    android:text="@string/sheet_template"
                    app:layout_constraintTop_toBottomOf="@+id/upload_image"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>


                <LinearLayout
                    android:id="@+id/sub_sheet_pick"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_24dp"
                    android:orientation="vertical"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/template_image">

                    <TextView
                        style="@style/text.sheetListText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/sub_menu_temp_pick_img" />

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/image_picker_recycler"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clipChildren="false"
                        android:clipToPadding="false"
                        android:paddingTop="@dimen/margin_16dp"
                        app:layoutManager="android.support.v7.widget.GridLayoutManager"
                        app:spanCount="3" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/sub_sheet_upload"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_24dp"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    app:layout_constraintTop_toBottomOf="@+id/template_image">

                    <ImageView
                        android:id="@+id/sheet_upload_preview"
                        android:layout_width="@dimen/sheet_preview_sizes"
                        android:layout_height="@dimen/sheet_preview_sizes"
                        android:adjustViewBounds="true"
                        android:contentDescription="@string/dialog_photo_a11y"
                        android:scaleType="centerCrop"
                        tools:src="@drawable/place_cage" />

                    <EditText
                        android:id="@+id/sub_upload_img_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/margin_8dp"
                        android:layout_marginStart="@dimen/margin_16dp"
                        android:hint="@string/sheet_preview_img_title"
                        android:inputType="text|textCapSentences" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/sub_sheet_template"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_24dp"
                    android:orientation="vertical"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/template_image">

                    <EditText
                        android:id="@+id/template_img_alt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/sheet_preview_img_alt"
                        android:inputType="text|textCapSentences|textUri" />

                    <EditText
                        android:id="@+id/template_img_url"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_16dp"
                        android:hint="@string/sheet_preview_img_url"
                        android:inputType="textUri" />

                </LinearLayout>

            </android.support.constraint.ConstraintLayout>


        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</android.support.design.widget.CoordinatorLayout>