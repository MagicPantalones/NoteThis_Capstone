<android.support.constraint.ConstraintLayout android:id="@+id/images_sheet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/margin_16dp"
    app:layout_constraintTop_toBottomOf="@+id/peek_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <TextView
        android:id="@+id/pick_uploaded_image"
        style="@style/text.sheetListText"
        android:text="@string/sheet_pick_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/upload_image"
        style="@style/text.sheetListText"
        android:text="@string/sheet_upload_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pick_uploaded_image" />

    <TextView
        android:id="@+id/template_image"
        style="@style/text.sheetListText"
        android:text="@string/sheet_template"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/upload_image" />

</android.support.constraint.ConstraintLayout>
