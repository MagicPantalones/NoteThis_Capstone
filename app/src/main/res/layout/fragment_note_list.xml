<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NoteListFragment"
    android:background="@color/backgroundColorMain">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/no_notes_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        tools:visibility="gone">

        <ImageView
            android:id="@+id/note_list_logo"
            android:layout_width="@dimen/img_logo_size_big"
            android:layout_height="@dimen/img_logo_size_big"
            android:contentDescription="@string/logo_a11y"
            android:src="@drawable/owl_24dp_color_nobg"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintBottom_toTopOf="@+id/new_note_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/new_note_button"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginTop="@dimen/img_logo_size_med"
            android:text="@string/new_note_btn"
            android:textColor="@color/primaryTextColor"
            android:background="@drawable/btn_background"
            android:fontFamily="sans-serif-condensed"
            android:textStyle="bold"
            android:elevation="2dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/note_list_logo" />
    </android.support.constraint.ConstraintLayout>
    
    
    <android.support.constraint.ConstraintLayout
        android:id="@+id/note_list_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:visibility="gone"
        tools:visibility="visible">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/note_list_recycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layoutManager="android.support.v7.widget.LinearLayoutManager"
            tools:listitem="@layout/note_title_view_holder"
            />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/new_note_fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/fab_margin"
            android:layout_marginEnd="@dimen/fab_margin"
            android:src="@drawable/outline_add_24px"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:fabSize="normal"/>

    </android.support.constraint.ConstraintLayout>


</FrameLayout>