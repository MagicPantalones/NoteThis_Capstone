<android.support.constraint.ConstraintLayout android:layout_width="match_parent"
    android:layout_height="@dimen/bottom_sheet_size"
    android:orientation="horizontal"
    android:padding="@dimen/margin_24dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/sheet_list_ordered"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/bottom_sheet_size"
        android:gravity="center_vertical"
        android:text="@string/sheet_preview_ordered_list"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.constraint.Guideline
        android:id="@+id/list_guide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5"/>

    <TextView
        android:id="@+id/sheet_list_unordered"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/bottom_sheet_size"
        android:gravity="center_vertical"
        android:layout_marginStart="12dp"
        android:text="@string/sheet_preview_unordered_list"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/list_guide"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>